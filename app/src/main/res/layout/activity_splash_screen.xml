<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/imageViewSplash"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_photo_camera_black_24dp" />

    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewSplash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="CKoiPapa"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ccd2e6"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/txtAppName"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Bienvenue dans notre application de reconnaissance d'image. Notre application vous permettra de prendre en photo un objet, un animal et vous donnera la description sous forme d'un court article explicatif." />


</RelativeLayout>